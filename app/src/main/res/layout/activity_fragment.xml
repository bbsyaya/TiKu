<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.tiku.FragmentActivity">

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/iv_dian_2"
        android:layout_marginBottom="25dp"

    android:src="@mipmap/page_indicator_focused"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/iv_dian_2"
        android:id="@+id/iv_dian_1"
        android:layout_marginBottom="25dp"
        android:paddingRight="20dp"
        android:src="@mipmap/page_indicator_unfocused"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/iv_dian_2"
        android:id="@+id/iv_dian_3"
        android:layout_marginBottom="25dp"
        android:paddingLeft="20dp"
        android:src="@mipmap/page_indicator_focused"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/iv_dian_2"
        android:id="@+id/vp_01"
        ></android.support.v4.view.ViewPager>
</RelativeLayout>
