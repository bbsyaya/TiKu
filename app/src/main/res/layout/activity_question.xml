<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.tiku.QuestionActivity">
    <include layout="@layout/topbar"
        android:id="@+id/question_topbar">

    </include>
    <widget.MyViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/question_topbar"
        android:id="@+id/vp_viewPager"></widget.MyViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_bo"

        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_shangyiti"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:drawableTop="@mipmap/answer_footicon01"
            android:text="上一题"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_shoucang"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:drawableTop="@drawable/ic_favo_selector"
            android:text="收藏"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_xiayiti"
            android:textColor="@android:color/darker_gray"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/answer_footicon04"
            android:text="下一题"/>
    </LinearLayout>
</RelativeLayout>
