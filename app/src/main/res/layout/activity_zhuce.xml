<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEEEE"

    tools:context=".ZhuceActivity">
    <include layout="@layout/topbar"
        ></include>
    <EditText
        android:id="@+id/ed_zhuce_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_username_selector"
        android:drawablePadding="16dp"
        android:hint="@string/hint_username"
        android:textColor="#000000"
        android:textColorHint="@android:color/darker_gray"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#cccccc" />

    <EditText
        android:id="@+id/ed_zhuce_pwd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_pwd_selector"
        android:drawablePadding="16dp"
        android:textColor="#000000"
        android:hint="@string/hint_pwd"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#cccccc" />

    <EditText
        android:id="@+id/ed_zhuce_nickname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:hint="@string/hint_nickname"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#cccccc" />

    <EditText
        android:id="@+id/ed_zhuce_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:hint="@string/hint_phonenumber"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="phone"
        android:textColor="#000000"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_zhuce_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/btn_selector"
        android:text="@string/btn_registe"
        android:textColor="#ffffff" />

</LinearLayout>
